
#include <stdio.h>

#define MAX_SIZE 100

int main()

{

    int arr[MAX_SIZE];

    int i, n;

    

    printf("Enter the size of the array: ");

    scanf("%d", &n);

    

    printf("Enter %d elements in the array: ", n);

    for(i=0; i<n; i++)

    {

        scanf("%d", &arr[i]);

    }

    

    printf("Original array: ");

    for(i=0; i<n; i++)

    {

        printf("%d ", arr[i]);

    }

    

    printf("\nReversed array: ");

    for(i=n-1; i>=0; i--)

    {

        printf("%d ", arr[i]);

    }

    

    return 0;

}
